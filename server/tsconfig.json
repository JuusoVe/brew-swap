{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true, 
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*",
          ]
      }
  },
  "include": [
      "src/**/*.ts",
  ],
  "exclude" : [
    "node_modules"
]
}